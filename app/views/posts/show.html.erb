<div class="posts-show">
 <%= link_to "Back", posts_path %>
<div class="post">

<p class="post-header">
<style>
.button {
   /* Green */
  border: none;
  color: black;
  background-color: white;

 
  font-size: 10px;
   cursor: pointer;
   position: absolute;
   right: 760px;
   top: 90px;
}
</style>
  <span>
   
    <%= link_to "#{@post.user.first_name}", @post.user.first_name, class: "user-name" %>
  </span>

  <%= link_to distance_of_time_in_words(Time.now, @post.created_at)+ ' ago', @post, class: 'timestamp' %>
  <% if current_user.id == @post.user_id %>
    <span class="edit-delete-post">
      <%= link_to 'Edit Post', edit_post_path(@post) %>
       <%# <%= link_to 'Delete', @post, method: :delete %> 
    
      
      <%= button_to 'delete', @post, :class => "button button4", :method => :delete, data: {confirm: "Are you sure?"} %>
   
 <%# <%= button_to t('buttons.Delete'), @post, :class => "button button4", :method => :delete %> 
    </span>
  
  <% end %>
</p>


  <p class="post-content">
    <%= @post.content %><br/>
    <% if @post.image.present? %>
      
        <%= image_tag(@post.image, size: "300x300") %>
    <% end %>
  </p>



  <br/>

  <% if @post.comments.count > 0 %>
  <div class="all-comments">
    <% @post.comments.each do |comment| %>
      <% user = User.find(comment.user_id) %>
     

      <p class="comment">
        <span class="comment-content">
          <strong><%= link_to "#{user.first_name} #{user.last_name}", user.first_name, class: "user-name" %></strong> <%= comment.content %>
        </span>
        <% if current_user.id == comment.user_id %>
          <span class="edit-delete-comment">
            <%= link_to 'Edit', edit_comment_path(comment) %>
            <%# <%= link_to 'Delete', comment, method: :delete, data: {confirm: "Are you sure?"} %> 
          </span>
        <% end %>
      </p>
    <% end %>
  </div>
  <% end %>
  <%= form_for(@comment) do |c| %>
    
    <%= c.text_area :content, class: "comment-field", placeholder: "Write a comment...", rows: "1" %>
    <%= c.submit "Comment" %>
    
    <%= c.hidden_field :post_id, value: @post.id %>
  <% end %>
  


</div>

</div>